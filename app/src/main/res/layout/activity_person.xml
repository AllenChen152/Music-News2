<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/colorqbule"
        app:titleTextColor="@color/colorWhite"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ImageView1"
            android:layout_width="match_parent"
            android:layout_height="304dp"
            android:background="@drawable/personbg"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.music_news1.tools.ImageRound
                android:id="@+id/ImageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/repg"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImageView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="未登录"
                android:textColor="#000"
                android:textSize="25sp" />

        </RelativeLayout>
    </FrameLayout>
    <!--灰色分割线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#DCDCDC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="我的收藏"
            android:textSize="20dp"
            android:textColor="#000"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp">
            <!--三个垂直线性布局-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageButton
                    android:id="@+id/ImageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/new1"
                    android:background="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="文章"
                    android:textColor="	#4F4F4F"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="80dp">
                <ImageButton
                    android:id="@+id/ImageButton1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/music1"
                    android:background="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="音乐"
                    android:textColor="#4F4F4F"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="80dp">
                <ImageButton
                    android:id="@+id/ImageButton2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/comment"
                    android:background="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="评论"
                    android:textColor="#4F4F4F"
                    android:textSize="20dp"/>

            </LinearLayout>
        </LinearLayout>

        <!--灰色分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#DCDCDC"/>
       <!--三个相对布局-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/ImageView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/focus"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的关注"
                android:layout_toRightOf="@+id/ImageView3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="#4F4F4F"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ImageView6"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:text="0"
                android:textSize="20dp"/>
            <ImageView
                android:id="@+id/ImageView6"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/enter"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/ImageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/songlist"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="歌单"
                android:layout_toRightOf="@+id/ImageView4"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="#4F4F4F"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/ImageView7"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/enter" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/ImageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/setting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:layout_toRightOf="@+id/ImageView5"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="#4F4F4F"
                android:textSize="20dp"/>
            <ImageView
                android:id="@+id/ImageView8"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/enter"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#DCDCDC"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/f" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="250dp"
            android:background="@drawable/q" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="490dp"
            android:background="@drawable/r" />
    </RelativeLayout>
</LinearLayout>